{% extends "layout.twig" %}
{% import 'MACROS.twig' as MACROS %}
{% block style_tags %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{ MACROS.appsSiteName }}src/bootstrap/css/bootstrap.min.css"/>
    <script src="{{ MACROS.appsSiteName }}src/js/jquery-3.3.1.min.js"></script>
    <script src="{{ MACROS.appsSiteName }}src/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="{{ MACROS.appsSiteName }}src/bootstrap/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="{{ MACROS.appsSiteName }}/src/style/token_redirect_to_app.css"/>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row main-row">
            <div class="span4">
            </div>
            <div class="span4">
                <div class="hero-unit">
                    {% if status == true %}
                        <h1 class="text-muted">
                            <span class="color-char-g">G</span><span class="color-char-o">oo</span><span
                                    class="color-char-d">d</span>
                            <span class="color-char-t">T</span><span class="color-char-o">o</span>
                            <span class="color-char-g">G</span><span class="color-char-o">o</span>
                        </h1>
                        <p class="text-muted">____________________________</p>
                        <h5>
                            您确认要打开 “{{ data.targetName }}” 应用？
                        </h5>
                        <p>
                            网址：
                            <sapn style="color: darkred">{{ data.redirectUrl }}</sapn>
                        </p>
                        <p>
                            <a class="btn btn-primary btn-large" href="{{ data.redirectUrl }}">前往 »</a>
                        </p>
                    {% else %}
                        <h1 class="text-muted">
                            <span class="color-char-w">W</span><span class="color-char-h">h</span><span
                                    class="color-char-o2">oo</span><span class="color-char-ps">ps</span>
                        </h1>
                        <p class="text-muted">____________________________</p>
                        <h5>
                            解析目标应用时出现了一个错误！
                        </h5>
                        <p>
                            {{ error }}
                        </p>
                        <a class="btn btn-primary btn-large" href="#">应用列表 »</a>
                        <div class="small text-muted">您可以在应用列表重新进入该应用登陆或者浏览其他应用。</div>
                    {% endif %}
                </div>
            </div>
            <div class="span4">
            </div>
        </div>
    </div>
    <script>
        setTimeout(function () {
            // window.location.href = "{{ data.redirectUrl }}";
            console.log("{{ data.redirectUrl }}")
        }, 5000);
    </script>
{% endblock %}